<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/蓝牙"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BuletoothMainActivity">


    <TextView
        android:id="@+id/text0"
        android:layout_width="770px"
        android:layout_marginLeft="30dp"
        android:layout_height="40dp"
        android:layout_marginTop="2dp"
        android:textSize="18sp"
        android:textColor="#000000"
        />

    <EditText

        android:id="@+id/edit"
        android:layout_width="500px"
        android:layout_height="40px"
        />

    <TextView
        android:id="@+id/take"

        android:layout_width="500px"
        android:layout_height="40px" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"

        android:orientation="horizontal"
        android:layout_margin="2dp">

    <Button
        android:id="@+id/send"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/kogzzhi"
         />

    <Button
        android:id="@+id/open"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:background="@drawable/kaiqi"
         />

    <Button
        android:id="@+id/server"
        android:layout_width="50dp"
        android:layout_marginLeft="70dp"
        android:layout_height="50dp"
        android:background="@drawable/kaipiing"
         />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"

        android:orientation="horizontal"
        android:layout_margin="2dp">

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="70dp"
            android:textColor="#000000"
            android:text="发送"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="#000000"
            android:text="打开"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="70dp"
            android:textColor="#000000"
            android:text="开启服务器"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"

        android:orientation="horizontal"
        android:layout_margin="2dp">
    <Button
        android:id="@+id/scan"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/jiance"
         />


    <Button
        android:id="@+id/cannotScan"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:background="@drawable/kaifang"
         />

    <Button
        android:id="@+id/close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="70dp"
        android:background="@drawable/guanbi"
         />
</LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"

        android:orientation="horizontal"
        android:layout_margin="2dp">

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="#000000"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="70dp"
            android:text="搜索"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="#000000"
            android:text="开放检测"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="#000000"
            android:layout_marginLeft="70dp"
            android:text="关闭"/>
    </LinearLayout>

<ListView
    tools:listheader="设备列表"
    android:id="@+id/list"

    android:layout_width="wrap_content"
    android:layout_height="230dp"></ListView>

<com.ashokvarma.bottomnavigation.BottomNavigationBar
    android:id="@+id/bottombar"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"></com.ashokvarma.bottomnavigation.BottomNavigationBar>

</LinearLayout>
